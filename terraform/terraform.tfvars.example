# Example terraform.tfvars file
# Copy this file to terraform.tfvars and update the values

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region

# Project Configuration
project_name = "patient-web-interface"
environment  = "production"

# VPC Configuration
vpc_cidr                = "10.0.0.0/16"
public_subnet_1_cidr    = "10.0.1.0/24"
public_subnet_2_cidr    = "10.0.2.0/24"
private_subnet_1_cidr   = "10.0.3.0/24"
private_subnet_2_cidr   = "10.0.4.0/24"

# EC2 Configuration
instance_type = "t3.micro"  # Change to larger instance if needed

# IMPORTANT: Replace this with your actual public key
# Generate with: ssh-keygen -t rsa -b 4096 -C "your_email@example.com"
# Then copy the content of ~/.ssh/id_rsa.pub
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC7... # Replace with your actual public key"

# Application Configuration
docker_image = "abdallahbagato/patient-web-interface:latest"
app_port     = 5000

# Auto Scaling Configuration
min_instances     = 1
max_instances     = 3
desired_instances = 2
